{% extends "layout.twig" %}

{% block content %}
  <!-- ====================================================================
  view.maintenance
  -->
  <div class="container content">
    <div class="col-lg-12">

      <div class="card">
        <div class="card-header text-bg-{{ CONF.controllers[controller].panelColor }}">
          <i class="{{ CONF.controllers[controller].faIcon }} fa-lg me-3"></i>
          {{ LANG.mtce_title }}
          {% if C.read('pageHelp') %}
            <a href="{{ CONF.controllers[controller].docurl }}" target="_blank" class="float-end" style="color:inherit;">
              <i class="bi bi-question-circle-fill bi-lg"></i>
            </a>
          {% endif %}
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-lg-3"><img src="public/images/maintenance.gif" alt="" class="img-floatleft">
            </div>
            <div class="col-lg-9">
              <h4>{{ LANG.mtce_title }}</h4>
              <p>{{ LANG.mtce_text }}</p>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
{% endblock %}
