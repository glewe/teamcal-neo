{% extends 'layout.twig' %}

{% block content %}
  <div class="container content">

    <div class="col-lg-12">
      {% if showAlert and (showAlerts != 'none') %}
        {% if (showAlerts == 'all') or (showAlerts == 'warnings' and (alertData.type == 'warning' or alertData.type == 'danger')) %}
          {{ createAlertBox(alertData)|raw }}
        {% endif %}
      {% endif %}

      {% if showToast %}
        <div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3">
          {{ createToast({
      'id': 'toast-absence-edit',
      'color': 'success',
      'icon': 'bi-person text-light',
      'title': 'TeamCal Neo',
      'message': 'Absence updated successfully.'
      }) }}
        </div>
        <script>
          var toastAbsenceEdit = new bootstrap.Toast(document.getElementById('toast-absence-edit'));
          toastAbsenceEdit.show();
        </script>
      {% endif %}

      <form class="form-control-horizontal" enctype="multipart/form-data" action="index.php?action={{ controller }}&amp;id={{ id }}" method="post" target="_self" accept-charset="utf-8">
        <input name="csrf_token" type="hidden" value="{{ csrf_token }}">
        <input name="hidden_id" type="hidden" class="text" value="{{ id }}">

        <div class="card">
          {% if CONF.allConfig.pageHelp %}
            {% set pageHelp = '<a href="' ~ CONF.controllers[controller].docurl ~ '" target="_blank" class="float-end" style="color:inherit;"><i class="bi bi-question-circle-fill bi-lg"></i></a>' %}
          {% else %}
            {% set pageHelp = '' %}
          {% endif %}

          <div class="card-header text-bg-{{ CONF.controllers[controller].panelColor }}">
            <i class="{{ CONF.controllers[controller].faIcon }} fa-lg me-3"></i>
            {{ LANG.abs_edit_title ~ name }}{{ pageHelp|raw }}
          </div>

          <div class="card-body">

            <div class="card">
              <div class="card-header">
                {{ createPageTabs([
              {'id': 'tab-general', 'href': '#panel-general', 'label': LANG.general, 'active': true},
              {'id': 'tab-options', 'href': '#panel-options', 'label': LANG.options, 'active': false},
              {'id': 'tab-groupassignments', 'href': '#panel-groupassignments', 'label': LANG.abs_tab_groups, 'active': false}
              ]) }}
              </div>

              <div class="card-body">
                <div id="myTabContent" class="tab-content">

                  <div
                    class="tab-pane fade show active" id="panel-general" role="tabpanel" aria-labelledby="tab-general">
                    <!-- Sample display -->
                    <div class="form-group row">
                      <label class="col-lg-8 control-label">
                        {{ LANG.abs_sample }}<br>
                        <span class="text-normal">{{ LANG.abs_sample_comment }}</span>
                      </label>
                      <div class="col-lg-4">
                        <div id="sample-icon" {{ ("style='border: 1px solid #333333; width: 32px; height: 32px; text-align: center; padding-top: 4px;" ~ (color ? " color: #" ~ color ~ ";" : "") ~ (not bgtrans and bgcolor ? " background-color: #" ~ bgcolor ~ ";" : "") ~ "'")|raw }} class=" mb-1">
                          <span class="{{ icon }}"></span>
                        </div>
                        <div id="sample-symbol" {{ ("style='border: 1px solid #333333; width: 32px; height: 32px; text-align: center; padding-top: 4px;" ~ (color ? " color: #" ~ color ~ ";" : "") ~ (not bgtrans and bgcolor ? " background-color: #" ~ bgcolor ~ ";" : "") ~ "'")|raw }}>
                          {{ symbol }}
                        </div>
                      </div>
                    </div>
                    <div class=" divider">
                      <hr>
                    </div>

                    <!-- Icon -->
                    <div class="form-group row">
                      <label class="col-lg-8 control-label">
                        {{ LANG.abs_icon }}<br>
                        <span class="text-normal">{{ LANG.abs_icon_comment }}</span>
                      </label>
                      <div class="col-lg-4">
                        <span class="{{ icon }} text-{{ color }}" style="font-size: 150%; padding-right: 8px; vertical-align: middle;"></span>
                        <a href="index.php?action=absenceicon&amp;id={{ id }}" class="btn btn-primary btn-sm" tabindex="{{ nextTabindex() }}">{{ LANG.btn_abs_icon }}</a>
                      </div>
                    </div>
                    <div class="divider">
                      <hr>
                    </div>

                    {% for formObject in formObjects.general %}
                      {{ createFormGroup(formObject, 8, 4, nextTabindex()) }}
                    {% endfor %}
                  </div>

                  <div class="tab-pane fade" id="panel-options" role="tabpanel" aria-labelledby="tab-options">
                    {% for formObject in formObjects.options %}
                      {{ createFormGroup(formObject, 8, 4, nextTabindex()) }}
                    {% endfor %}
                  </div>

                  <div class="tab-pane fade" id="panel-groupassignments" role="tabpanel" aria-labelledby="tab-groupassignments">
                    {% for formObject in formObjects.groups %}
                      {{ createFormGroup(formObject, 8, 4, nextTabindex()) }}
                    {% endfor %}
                  </div>

                </div>
              </div>
            </div>

            <div class="mt-4 text-end">
              <button type="submit" class="btn btn-primary me-2" tabindex="{{ nextTabindex() }}" name="btn_save">{{ LANG.btn_save }}</button>
              <a href="index.php?action=absences" class="btn btn-secondary" tabindex="{{ nextTabindex() }}">{{ LANG.btn_abs_list }}</a>
            </div>

          </div>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
